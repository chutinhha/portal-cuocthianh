@{
    ViewBag.Title = "Danh mục bài viết";
}

<div class="head">
    <div class="isw-grid">
    </div>
    <h1>
        Danh mục bài viết</h1>
    <ul class="buttons">
        <li><a href="#" class="isw-settings"></a>
            <ul class="dd-list" style="display: none;">
             @if (CameraShop.BaseController.Permission.Contains("C"))
             {
                <li><a href="@Url.Action("AddOrUpdate", "CategoryArticleManagement")"><span class="isw-plus"></span>Thêm
                    danh mục</a></li>
             }
            </ul>
        </li>
    </ul>
    <div class="clear">
    </div>
</div>
<div class="block-fluid table-sorting">
    <div class="row-fluid list">
     @if (CameraShop.BaseController.Permission.Contains("R"))
     {
        @Html.Action("_ShowAll", "CategoryArticleManagement")
     }
     else
     {
         <span>Bạn không có quyền xem trang này</span> 
     }
    </div>
</div>





