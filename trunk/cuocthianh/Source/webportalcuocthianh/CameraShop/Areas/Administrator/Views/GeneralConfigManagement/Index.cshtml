
@{ 
    ViewBag.Title = "Cấu hình";
}
@using Helper
<script src="@Url.ContentArea("~/Content/javascript/Config.js")" type="text/javascript"></script>
<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents">
            </div>
            <h1>
                Cấu hình</h1>
            <div class="clear">
            </div>
        </div>
         @if (CameraShop.BaseController.Permission.Contains("R"))
             {
        <div class="block-fluid tabs">
            <ul>
                <li><a href="#tabs-1">Cấu hình chung</a></li>
                <li><a href="#tabs-2">Email</a></li>
                <li><a href="#tabs-3">Email template</a></li>
                <li><a href="#tabs-4">Sao lưu - phục hồi</a></li>
            </ul>
             <div class="warning-area">
                </div>
                <div id="tabs-1">
                    
                 @Html.Action("_General","GeneralConfigManagement")
                    
                </div>
                <div id="tabs-2">
               
                 @Html.Action("_Email","GeneralConfigManagement")
                    
                 
                </div>
               
                <div id="tabs-3">
               
                    <input style="margin-left:5px;" id="addnew" class="btn btn-primary" type="button" value="Thêm mới" />
                      
                      

                    <div class="formsearch" >
                        <span hidden id="txtid">0</span>
                        <div>
                            <label> Tên template:</label> @Html.TextBox("NameTemplate","")
                        </div>
                        <div>
                            <label> Loại template:</label><select id="cbtypeemail">
                                <option value="1">Template sản phẩm</option>
                                <option value="2">Template đơn hàng</option>
                                <option value="3">Template khác</option>
                            </select>
                        </div>
                        <textarea id="txtcontent"></textarea>
                        <div class="row-form">
                            <input id="addaction" class="btn btn-primary" type="button" value="Cập nhật" />
                            <input id="closesearchform" class="btn btn-danger" type="button" value="Đóng" />
                        </div>
                    </div>



                     <div style="clear:both" class="clear">
                     </div>
                    
                <div class="block-fluid table-sorting">
                    <div class="row-fluid listmail">
                        @Html.Action("_EmailTemplate", "GeneralConfigManagement")
                    </div>
                </div>

                
                </div>
                <div id="tabs-4">
               
                 
                 
                </div>
               
            
        </div>
        }
        else
        {
          <span>Bạn không có quyền xem trang này</span>
        }
    </div>
</div>





<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {
        jQuery(".formsearch").hide();
        jQuery("#addnew").ShowAddnewForm();
        jQuery("#closesearchform").CloseForm();
        jQuery(".cmdupdategneral").Genneral();
        jQuery(".cmdupdateemail").Email();
        jQuery("#addaction").CreateOrUpdateTemplate();
        CKEDITOR.replace("txtcontent", { filebrowserBrowseUrl: '/Areas/Administrator/Content/ckeditor/plugins/filemanager/index.html' });
        $(".showedit").live("click", function (e) {
            var $this = $(this);
            ShowEdit(e, $this);
        });
        $(".deletemail").live("click", function (e) {
            var $this = $(this);
            Delete(e, $this);
        });

    });
</script>



