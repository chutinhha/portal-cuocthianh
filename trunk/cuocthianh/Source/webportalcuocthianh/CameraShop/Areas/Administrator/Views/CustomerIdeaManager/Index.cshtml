@{
    ViewBag.Title = "Ý kiến người dùng";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
@using Helper
<script src="@Url.ContentArea("~/Content/javascript/customeridea.js")" type="text/javascript"></script>
<div class="head">
    <div class="isw-grid">
    </div>
    <h1>
        Ý kiến khách hàng</h1>
    <div class="clear">
    </div>
</div>
   @if (CameraShop.BaseController.Permission.Contains("R"))
   {
<div class="block-fluid tabs">
    <ul>
        <li><a href="#tabs-1">Liên hệ</a></li>
        <li><a href="#tabs-2">Đơn hàng</a></li>
    </ul>
    <div class="warning-area">
    </div>
    <div class="clear">
    </div>
    <div id="tabs-1">
        <div class="block-fluid table-sorting">
            <div class="row-fluid listproduct">
                @Html.Action("_ShowIdeaByType", "CustomerIdeaManager", new { typeid = 2 })
            </div>
        </div>
    </div>
    <div id="tabs-2">
        <div class="block-fluid table-sorting">
            <div class="row-fluid listproduct">
                @Html.Action("_ShowIdeaByType", "CustomerIdeaManager", new { typeid = 1 })
            </div>
        </div>
    </div>
</div>
   }
   else
   {
       <span>Bạn không có quyền truy cập trang này</span> 
   }
<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {
        reloadGridCustomerIdea(1);
        reloadGridCustomerIdea(2);
        
    });
</script>
