@using CoreData
@model IEnumerable<User_Role_Module>
@if (Model!=null&&Model.Count() > 0)
{
    int i = 0;
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <thead>
            <tr>
                <th width="20px">STT
                </th>
                <th>Tài khoản
                </th>
                <th width="70px">Nhóm</th>
                <th>Module
                </th>
                <th width="60px">Quyền
                </th>
                <th width="60px">Chức năng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        <span class="SpanId" style="display: none;">@item.ID</span>
                        <span class="SpanName" style="display: none;">@item.UserNameExt</span>
                        @item.UserNameExt
                    </td>
                    <td>
                       @item.GroupNameExt
                    <td>
                        @item.ModuleNameExt
                    </td>
                    <td>
                       @item.Role
                    </td>
                    <td>
                      @if (CameraShop.BaseController.Permission.Contains("U") || CameraShop.BaseController.Permission.Contains("C"))
                      {
                        <a title="Sửa" href="@Url.Action("AddOrUpdate", "PermissionManagement", new { id = item.ID })" class="icon-pencil"></a>
                      }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="error-text">Không tìm thấy dữ liệu.
    </h2>
}