@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
@using Helper

<div class="head">
    <div class="isw-grid">
    </div>
    <h1>
        Sản phẩm</h1>
    <ul class="buttons">
        <li><a href="#" class="isw-settings"></a>
            <ul class="dd-list" style="display: none;">
              @if (CameraShop.BaseController.Permission.Contains("C"))
              {
                <li><a href="@Url.Action("AddOrUpdate", "ArticleManagement")"><span class="isw-plus"></span>Thêm
                    bài viết</a></li>
              }
            </ul>
        </li>
    </ul>
    <div class="clear">
    </div>
</div>
<div class="block-fluid table-sorting">
    <div class="row-fluid listproduct">
       @if (CameraShop.BaseController.Permission.Contains("R"))
       {
          @Html.Action("_ShowAll", "ArticleManagement")
       }
       else
       { 
           <span>Bạn không có quyền xem trang này</span>
       }
    </div>
</div>


<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {

        reloadGridArticle();
    });
</script>
<script src="@Url.ContentArea("~/Content/javascript/article.js")" type="text/javascript"></script>