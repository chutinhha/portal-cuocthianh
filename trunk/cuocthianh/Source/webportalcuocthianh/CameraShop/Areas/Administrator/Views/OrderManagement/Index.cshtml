@{
    ViewBag.Title = "Đơn hàng";
}
@using Helper
<script src="@Url.ContentArea("~/Content/javascript/Order.js")" type="text/javascript"></script>
<div class="head">
    <div class="isw-grid">
    </div>
    <h1>
        Đơn hàng</h1>
    <ul class="buttons">
        <li><a href="#" class="isw-settings"></a></li>
    </ul>
    <div class="clear">
    </div>
</div>
@if (CameraShop.BaseController.Permission.Contains("R"))
{
    <div class="block-fluid tabs">
        <ul>
            <li><a href="#tabs-1">Đơn hàng mới</a></li>
            <li><a href="#tabs-2">Đơn hàng đã thanh toán</a></li>
            <li><a href="#tabs-3">Đơn hàng đang xủ lý</a></li>
            <li><a href="#tabs-4">Đơn hàng đang yêu cầu hủy</a></li>
            <li><a href="#tabs-5">Đơn hàng đã được xử lý</a></li>
        </ul>
        <div class="warning-area">
        </div>
        <div class="clear">
        </div>
        <div id="tabs-1">
            <div class="block-fluid table-sorting">
                <div class="row-fluid listNew">
                    @Html.Action("_ShowAll", "OrderManagement", new { status = (int)Helper.ValueDefine.OrderStatus.New })
                </div>
            </div>
        </div>
        <div id="tabs-2">
            <div class="block-fluid table-sorting">
                <div class="row-fluid listPaid">
                    @Html.Action("_ShowAll", "OrderManagement", new { status = (int)Helper.ValueDefine.OrderStatus.Paid })
                </div>
            </div>
        </div>
        <div id="tabs-3">
            <div class="block-fluid table-sorting">
                <div class="row-fluid listPending">
                    @Html.Action("_ShowAll", "OrderManagement", new { status = (int)Helper.ValueDefine.OrderStatus.Pending })
                </div>
            </div>
        </div>
        <div id="tabs-4">
            <div class="block-fluid table-sorting">
                <div class="row-fluid listCancel">
                    @Html.Action("_ShowAll", "OrderManagement", new { status = (int)Helper.ValueDefine.OrderStatus.Cancel })
                </div>
            </div>
        </div>
        <div id="tabs-5">
            <div class="block-fluid table-sorting">
                <div class="row-fluid listCompleted">
                    @Html.Action("_ShowAll", "OrderManagement", new { status = (int)Helper.ValueDefine.OrderStatus.Completed })
                </div>
            </div>
        </div>
    </div>
    
}
else
{
    <span>Bạn không có quyền truy cập trang này</span> 
}
<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {

        loadGrid(1);
        loadGrid(2);
        loadGrid(3);
        loadGrid(4);
        loadGrid(5);

    });
</script>
