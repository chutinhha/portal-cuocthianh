@using CoreData
@model List<Examinee>

@foreach (var item in Model)
{
    <article class="pinbox">
        <div class="post-122 post type-post status-publish format-standard has-post-thumbnail sticky hentry category-landscapes tag-dummy tag-industry tag-ipsum tag-lorem tag-printing tag-simply tag-text tag-typesetting">
            <div class="top-bar">
                <ul class="social-media-icons clearfix">
                    <li><a href="https://www.facebook.com/sharer/sharer.php?u=@Url.Action("Detail", "Examinee", new { id = ""+@item.ID+"", username = @item.UserNameExt })"
                        class="border-color-3 icon-facebook tooltip" title="Share on Facebook" target="_blank">
                        Facebook</a></li>
                    <li><a href="https://plus.google.com/share?url=@Url.Action("Detail", "Examinee", new { id = "" + @item.ID + "", username = @item.UserNameExt })"
                        class="border-color-1 icon-gplus tooltip" title="Share on Google+" target="_blank">
                        Google+</a></li>
                    <li><a href="https://twitter.com/share?url=@Url.Action("Detail", "Examinee", new { id = "" + @item.ID + "", username = @item.UserNameExt })"
                        class="border-color-4 icon-twitter tooltip" title="Share on Twitter" target="_blank">
                        Twitter</a></li>
                </ul>
            </div>
            <div class="preview">
                <p class="thumb">
                    <a href="@Url.Action("Detail", "Examinee", new { id = "" + @item.ID + "", username = @item.UserNameExt })" title="">
                        <img src="/Media/ProfileAvatar/@item.Image" width="236"
                            height="208" alt="">
                    </a>
                </p>
            </div>
            <div class="title">
                <h2 class="title-2">
                    <a href="@Url.Action("Detail", "Examinee", new {  id = ""+@item.ID+"", username = @item.UserNameExt })">Số báo danh: @item.Code - @item.UserNameExt</a>
                    </h2>
            </div>
            <div class="excerpt">
                @item.Description
            </div>
            <div class="meta-data">
                <ul class="clearfix">
                    <li class="border-color-1 tooltip " title="Total comments"><span class="icon-total-comments">
                        @item.ViewCount</span> </li>
                    <li class="border-color-2 tooltip " title="Post date"><span class="icon-post-date">@item.DayOfBirth.ToString("dd.MM.yyyy")</span>
                    </li>
                </ul>
            </div>
        </div>
    </article>
}