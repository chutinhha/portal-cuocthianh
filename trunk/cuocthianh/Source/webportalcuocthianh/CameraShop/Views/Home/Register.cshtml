@{
    ViewBag.Title = "Đăng ký tài khoản mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CoreData
@model User
@section HeadResource{
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/login.css")" rel="stylesheet" type="text/css" />
}
@section BottomResource{
    <script src="@Url.Content("~/Content/js/login.js")" type="text/javascript"></script>
}
<div class="login-view">
    <div class="login-box">
        <div class="box-inner">
            <div class="content-login">
                <div class="module-head">
                    <h4>
                        Tạo tài khoản mới</h4>
                </div>
                @Html.ValidationSummary()
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <ul>
                        <li>
                            <label>
                                Họ tên:</label>@Html.TextBoxFor(x => x.Name, new { @class = "txt" })</li>
                        <li>
                            <label>
                                Tên đăng nhập:</label>@Html.TextBoxFor(x => x.UserName, new { @class = "txt" })</li>
                        <li>
                            <label>
                                Mật khẩu:</label>@Html.PasswordFor(x => x.Password, new { @class = "txt", @id = "txt-Password" })</li>
                        <li>
                            <label>
                                Nhập lại mật khẩu:</label>@Html.PasswordFor(x => x.TempPassWordExt, new { @class = "txt", @id = "txt-rePassword" })</li>
                        <li>
                            <label>
                                Email:</label>@Html.TextBoxFor(x => x.Email, new { @class = "txt" })</li>
                        <li>
                            <label>
                                Điện thoại:</label>@Html.TextBoxFor(x => x.Phone, new { @class = "txt" })</li>
                        <li>
                            <div class="inside-row">
                                <label>
                                    Địa chỉ:</label>@Html.TextBoxFor(x => x.Address, new { @class = "txt" })</div>
                        </li>
                        <li class="control-register">
                            <input id="btn-register" class="btn btn-register" type="submit" value="Đăng ký tài khoản" />
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="intro-box">
        <div class="box-inner">
            <div class="content-login">
                <div class="module-head">
                    <h4>
                        Nếu bạn đã có tài khoản</h4>
                </div>
                <div class="intro-to-register">
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed rutrum, ligula nec
                        varius interdum, lacus eros pulvinar massa, nec pharetra risus turpis at nibh
                    </p>
                </div>
            </div>
            <div class="control-register">
                <a href="@Url.Action("LoginHome", "Home")" class="btn btn-blue btn-register">Đăng nhập</a>
            </div>
        </div>
    </div>
</div>
