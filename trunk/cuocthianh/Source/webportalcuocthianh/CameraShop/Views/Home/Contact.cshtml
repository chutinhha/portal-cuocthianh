@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadResource{
    <title>@ViewBag.Title</title>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&language=vn"></script>
    <link href="@Url.Content("~/Content/css/contact.css")" rel="stylesheet" type="text/css" />
}
@section BottomResource{
    <script src="@Url.Content("~/Content/js/contact.js")" type="text/javascript"></script>
}

<div class="main-content">
    <div class="grid-row">
        <div class="contact-view">
            <div class="module-head">
                <h4>
                    Thông tin liên hệ</h4>
            </div>
            <div class="contact-box">
                <h3>
                    Liên hệ với chúng tôi qua:</h3>
                <p>
                    456 Hai Bà Trưng, phường Tân Định, quận 1, TP.HCM</p>
                <p>
                    Số điện thoại: 016.5613.5162</p>
            </div>
            <div class="map-box">
                <div id="map-canvas">
                </div>
            </div>
            <div class="module-head">
                <h4>
                    Liên hệ</h4>
            </div>
            <div class="input-contact">
                @Html.Action("_AddContactComment", "CustomerIdea")
            </div>
        </div>
    </div>
</div>
