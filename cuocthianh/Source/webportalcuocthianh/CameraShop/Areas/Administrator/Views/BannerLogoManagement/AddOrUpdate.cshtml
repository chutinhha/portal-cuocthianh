@{
    ViewBag.Title = "Thêm hoặc chỉnh sửa Banner";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

@using Helper

<script src="@Url.ContentArea("~/Content/javascript/bannerlogo.js")" type="text/javascript"></script>
@Html.Action("_AddOrUpdate", "BannerLogoManagement", new { id = Model })

<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {

        $('#fileuploadbannerlogo').fileupload({
            dataType: 'json',
            url: '/Administrator/BannerLogoManagement/UploadFiles?dir=BannerLogo',
            autoUpload: true,
            done: function (e, data) {
                $('#imagebannerlogo').html('<img width=\"70px\" height=\"70px\" src="/Media/bannerlogo/' + data.result.name + '" />');

            }
        }).on('fileuploadprogressall', function (e, data) {
            var progress = parseInt(data.loaded / data.total * 100, 10);
            $('.progress .progress-bar').css('width', progress + '%');
        });

        $(".showedit").live("click", function (e) {
            var $this = $(this);
            ShowEdit(e, $this);
        });

        $(".delete").live("click", function (e) {
            var $this = $(this);
            DeleteProductAttribute(e, $this);
        });

        //********END*****************

    });
</script>
