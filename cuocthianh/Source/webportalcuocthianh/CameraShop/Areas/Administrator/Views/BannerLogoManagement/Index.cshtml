@{
    ViewBag.Title = "Quản lý Banner & Logo";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
@using Helper
<div class="head">
    <div class="isw-grid">
    </div>
    <h1>
        @ViewBag.Title</h1>
    <ul class="buttons">
        <li><a href="#" class="isw-settings"></a>
            <ul class="dd-list" style="display: none;">
                @if (CameraShop.BaseController.Permission.Contains("C"))
                {
                    <li><a href="@Url.Action("AddOrUpdate", "BannerLogoManagement")"><span class="isw-plus">
                    </span>Thêm banner</a></li>
                }
            </ul>
        </li>
    </ul>
    <div class="clear">
    </div>
</div>
<div class="block-fluid table-sorting">
    <div class="row-fluid listproduct">
        @if (CameraShop.BaseController.Permission.Contains("R"))
        {
            @Html.Action("_ShowAll", "BannerLogoManagement")
        }
        else
        { 
            <span>Bạn không có quyền xem trang này</span>
        }
    </div>
</div>
<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {
        reloadGridBanner();
    });
</script>
<script src="@Url.ContentArea("~/Content/javascript/bannerlogo.js")" type="text/javascript"></script>
