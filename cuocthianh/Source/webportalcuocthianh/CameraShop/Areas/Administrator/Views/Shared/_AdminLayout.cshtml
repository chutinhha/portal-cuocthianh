@using Helper;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>@ViewBag.Title</title>
    <link href="@Url.ContentArea("~/Content/css/stylesheets.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.ContentArea("~/Content/css/fullcalendar.print.css")" media="print" />
    <script src="@Url.ContentArea("~/Content/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentArea("~/Content/js/jquery-ui.min.js")" type="text/javascript"></script>
    <link href="@Url.ContentArea("~/Content/css/other.css")" rel="stylesheet" type="text/css" />
    <!--TopAlertPopup-->
    <link href="@Url.ContentArea("~/Content/Plugin/TopAlertPopup/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.ContentArea("~/Content/Plugin/TopAlertPopup/javascript/javascript.js")" type="text/javascript"></script>
    <!--End TopAlertPopup-->
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/jquery/jquery.mousewheel.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/cookie/jquery.cookies.2.2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/charts/jquery.flot.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/charts/jquery.flot.stack.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/charts/jquery.flot.pie.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/charts/jquery.flot.resize.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/sparklines/jquery.sparkline.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/fullcalendar/fullcalendar.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/select2/select2.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/uniform/uniform.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/maskedinput/jquery.maskedinput-1.3.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/validation/languages/jquery.validationEngine-en.js")" charset="utf-8"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/validation/jquery.validationEngine.js")" charset="utf-8"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/animatedprogressbar/animated_progressbar.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/qtip/jquery.qtip-1.0.0-rc3.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/pnotify/jquery.pnotify.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/cleditor/jquery.cleditor.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/dataTables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/fancybox/jquery.fancybox.pack.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins/datetimepicker/jquery-ui-timepicker-addon.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/cookies.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/actions.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/charts.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/plugins.js")"></script>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/js/fileuploader.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.ContentArea("~/Content/css/fileuploader.css")"/>
    <script type="text/javascript" src="@Url.ContentArea("~/Content/ckeditor/ckeditor.js")" ></script>
    <link href="@Url.ContentArea("~/Content/Plugin/JQueryUpload/jquery.fileupload.css")"  rel="stylesheet" type="text/css" />
    <script src="@Url.ContentArea("~/Content/Plugin/JQueryUpload/jquery.ui.widget.js")" type="text/javascript"></script>
    <script src="@Url.ContentArea("~/Content/Plugin/JQueryUpload/jquery.fileupload.js")" type="text/javascript"></script>
    <script src="@Url.ContentArea("~/Content/javascript/customvalidate.js")" type="text/javascript"></script>
</head>
<body>
    <div class="header">
        <a class="logo" href="@Url.Action("Index", "Management", new { area = "Administrator" })">
            <img src="@Url.ContentArea("~/Content/img/logo.png")" alt="" title=""/></a>
        <ul class="header_menu">
            <li class="list_icon"><a href="javascript:void(0)">&nbsp;</a></li>
        </ul>
    </div>
    <div class="menu">
        <div class="breadLine">
            <div class="arrow">
            </div>
            <div class="adminControl active">
                Chào bạn, @User.Identity.Name
            </div>
        </div>
        <div class="admin">
            <div class="image">
                <img src="@Url.ContentArea("~/Content/img/users/user.png")" class="img-polaroid" alt=""/>
            </div>
            <ul class="control">
                <li><span class="icon-comment"></span><a target="_blank" href="@Url.Action("Index", "Home", new { area = "" })">
                    Ra trang chủ</a></li>
                <li><span class="icon-cog"></span><a href="#">Tùy chỉnh</a></li>
                <li><span class="icon-share-alt"></span><a href="@Url.Action("LogOff", "Management")">
                    Thoát </a></li>
            </ul>
            <div class="info">
                <span>Chào mừng bạn quay trở lại!</span>
            </div>
        </div>
        <ul class="navigation">
            <li><a href="@Url.Action("Index", "Management")"><span class="isw-grid"></span><span
                class="text">Bảng điều khiển</span> </a></li>
            <li class="openable active"><a href="javascript:void(0)"><span class="isw-list"></span>
                <span class="text">Quản trị người dùng</span> </a>
                <ul>
                    <li><a href="@Url.Action("Index", "UserManagement")"><span class="icon-th-large"></span>
                        <span class="text">Quản lý người dùng</span> </a></li>
                    <li><a href="@Url.Action("Index", "PermissionManagement")"><span class="icon-th-large">
                    </span><span class="text">Phân quyền người dùng</span> </a></li>
                </ul>
            </li>
            <li class="openable active"><a href="javascript:void(0)"><span class="isw-zoom"></span>
                <span class="text">Quản lý danh mục</span> </a>
                <ul>
                    <li><a href="@Url.Action("Index", "ManufacturerManagement")"><span class="icon-pencil">
                    </span><span class="text">Nhà sản xuất</span></a></li>
                    <li><a href="@Url.Action("Index", "CategoryManagement")"><span class="icon-pencil"></span>
                        <span class="text">Danh mục sản phẩm</span></a></li>
                    <li><a href="@Url.Action("Index", "ProductManagement")"><span class="icon-pencil"></span>
                        <span class="text">Sản phẩm</span></a></li>
                    <li><a href="@Url.Action("Index", "AttributeManagement")"><span class="icon-pencil">
                    </span><span class="text">Quản lý thuộc tính sản phẩm </span></a></li>
                    @* <li><a href="@Url.Action("Index", "ModelManagement")"><span class="icon-pencil"></span>
                        <span class="text">Model sản phẩm </span></a></li>*@
                </ul>
            </li>
            <li class="openable active"><a href="javascript:void(0)"><span class="isw-zoom"></span>
                <span class="text">Dịch vụ</span> </a>
                <ul>
                    <li><a href="@Url.Action("Index", "OrderManagement")"><span class="icon-pencil"></span>
                        <span class="text">Đơn hàng </span></a></li>
                    <li><a href="@Url.Action("Index", "CustomerIdeaManager")"><span class="icon-th-large">
                    </span><span class="text">Ý kiến người dùng</span> </a></li>
                </ul>
            </li>
            <li class="openable active"><a href="javascript:void(0)"><span class="isw-zoom"></span>
                <span class="text">Quản lý bài viết</span> </a>
                <ul>
                    <li><a href="@Url.Action("Index", "ArticleManagement")"><span class="icon-pencil"></span>
                        <span class="text">Bài viết</span></a></li>
                </ul>
            </li>
            <li class="openable active"><a href="javascript:void(0)"><span class="isw-zoom"></span>
                <span class="text">Quản lý tùy chỉnh</span> </a>
                <ul>
                    <li><a href="@Url.Action("Index", "GeneralConfigManagement")"><span class="icon-pencil">
                    </span><span class="text">Tùy chỉnh</span></a></li>
                </ul>
                <ul>
                    <li><a href="@Url.Action("Index", "ProvinceManagement")"><span class="icon-pencil"></span>
                        <span class="text">Quản lý tỉnh/thành phố </span></a></li>
                </ul>
                <ul>
                    <li><a href="@Url.Action("Index", "DistrictManagement")"><span class="icon-pencil"></span>
                        <span class="text">Quản lý quận/huyện </span></a></li>
                </ul>
            </li>
            <li><a href="@Url.Action("Index", "BannerLogoManagement")"><span class="isw-list"></span><span class="text">Quản lý Banner</span> </a></li>
        </ul>
        <div class="dr">
            <span></span>
        </div>
        <div class="widget-fluid">
            <div id="menuDatepicker">
            </div>
        </div>
        <div class="dr">
            <span></span>
        </div>
    </div>
    <div class="content">
        <div class="breadLine">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Management")">Admin</a> <span class="divider">></span>
                    <a href="@Url.Action("Index", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())">
                        @(!String.IsNullOrEmpty(ViewBag.ControllerName) ? ViewBag.ControllerName : HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())</a>
                    <span class="divider">></span> </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
        <div class="workplace">
            @RenderBody()
        </div>
    </div>
</body>
</html>
