@{
    ViewBag.Title = "Thêm hoặc chỉnh sửa";
}
@using Helper

<script src="@Url.ContentArea("~/Content/javascript/category.js")" type="text/javascript"></script>

@Html.Action("_AddOrUpdate", "OrderManagement", new { id = Model })

<script type="text/javascript">
    ///Document Ready jQuery
    $(document).ready(function () {

        $('#fileupload').fileupload({
            dataType: 'json',
            url: '/Administrator/CategoryManagement/UploadFiles?dir=Category");',
            autoUpload: true,
            done: function (e, data) {
                $('#image').html('<img width=\"70px\" height=\"70px\" src="/Media/Category/' + data.result.name + '" />');

            }
        }).on('fileuploadprogressall', function (e, data) {
            var progress = parseInt(data.loaded / data.total * 100, 10);
            $('.progress .progress-bar').css('width', progress + '%');
        });

    });
</script>