@using CoreData
@model IEnumerable<User>
@if (Model!=null&&Model.Count() > 0)
{
    int i = 0;
    var group = "tSortableuser" + Model.First().GroupIDExt;
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="@group">
        <thead>
            <tr>
                <th width="20px">STT
                </th>
                <th>Tên người dùng</th>
                 <th>Tài khoản</th>
                <th>Địa chỉ</th>
                <th>Điện thoại
                </th>
                <th>Email
                </th>
                <th width="60px">Trạng thái
                </th>
                <th width="60px">Chức năng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        <span class="SpanId" style="display: none;">@item.ID</span>
                        <span class="SpanName" style="display: none;">@item.Name</span>
                        @item.Name
                    </td>
                    <td>
                    @item.UserName
                    </td>
                    <td>
                       
                       @item.Address
                     </td>
                    <td>
                        @item.Phone
                    </td>
                     <td>
                        @item.Email
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => item.Active, new { @disabled = "disabled" })
                    </td>
                    <td>
                     @if (CameraShop.BaseController.Permission.Contains("U") || CameraShop.BaseController.Permission.Contains("C"))
                     {
                        <a title="Sửa" href="@Url.Action("AddOrUpdate", "UserManagement", new { id = item.ID })" class="icon-pencil"></a>
                     }
                      @if (CameraShop.BaseController.Permission.Contains("D"))
                      {
                        <a title="Xóa" href="@Url.Action("Delete", "UserManagement", new { id = item.ID })" class="icon-trash" onclick="return confirm('Có chắc bạn muốn xóa ?');"></a>
                      }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="error-text">Không tìm thấy dữ liệu.
    </h2>
}