@{
    if (@Model.FirstOrDefault().CategoryNameExt == "" && @Model.FirstOrDefault().UserNameExt == "")
    {
        ViewBag.Title = "Tất cả bài viết";
    }
    else if (@Model.FirstOrDefault().CategoryNameExt != "" && @Model.FirstOrDefault().UserNameExt == "")
    {
        ViewBag.Title = "Bài viết " + @Model.FirstOrDefault().CategoryNameExt + ""; 
    }
    else if (@Model.FirstOrDefault().CategoryNameExt == "" && @Model.FirstOrDefault().UserNameExt != "")
    {
        ViewBag.Title = "Bài viết của " + @Model.FirstOrDefault().UserNameExt + ""; 
    }
    else {
        ViewBag.Title = "Bài viết " + @Model.FirstOrDefault().CategoryNameExt + " của " + @Model.FirstOrDefault().UserNameExt + ""; 
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CoreData
@model IEnumerable<Article>
@section HeadResource{
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/plugins/KyersPager/css/css.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/article.css")" rel="stylesheet" type="text/css" />
}
@if (Model != null && Model.Count() > 0)
{ 
<div class="article-container item">
    <h1 class="general-heading">
    <span>@ViewBag.Title</span>
    </h1>
    <div class="list-article">
        <ul>
            @foreach (var item in Model)
            {
            <li>
                <div class="article-holder">
                    <a class="article-link-img" href="@Url.Action("detail", "article", new { @id = "" + @item.ID + "" })">
                        <img src="@Url.Content("~/Media/article/" + @item.Image + "")" alt="@item.Title" />
                    </a>
                    <div class="article-infor">
                        <p class="description-box">
                            <span>@item.ShortDescription</span>
                        </p>
                        <h2>
                            <a href="@Url.Action("detail", "article", new { @id = "" + @item.ID + "" })" class="product-title">@item.Title</a></h2>
                    </div>
                </div>
            </li>
            }
        </ul>
    </div>
    <div id="article-pager" class="list-pager">
        @{
            int totalPage = Model.FirstOrDefault().TotalPage;
            int currentPage = (int)Model.First().page;
            int i = 0;

            long tempcatID = 0;
            if (Model.FirstOrDefault().CategoryNameExt == "")
            {
                tempcatID = 0;
            }
            else {
                tempcatID = Model.FirstOrDefault().CateID;
            }
            
            <ul>
                <li class="bullet-first"><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = 1 })"><<</a></li>
                @if (currentPage > 1)
                {
                    <li class="bullet-prev"><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = currentPage - 1 })"><</a></li>
                }
                @if (totalPage > 0)
                {
                    var startPage = currentPage-2;
                    var endPage=currentPage+2;
                    if (startPage < 1) { startPage = 1; }
                    if (endPage > totalPage) { endPage = totalPage; }
                    
                    if (currentPage >= 4)
                    {
                    <li>...</li>
                    }
                    for (i = startPage; i <= endPage; i++)
                    {
                        if(currentPage==i)
                        {
                            <li class="current-page"><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = i })">@i</a></li>
                        }
                        else{
                            <li><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = i })">@i</a></li>
                        }
                    }
                    if (currentPage <= totalPage - 2)
                    {
                    <li>...</li>
                    }
                }
                
                @if (currentPage < totalPage)
                {
                    <li class="bullet-next"><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = currentPage + 1 })">></a></li>
                }
                <li class="bullet-last"><a href="@Url.Action("Index", "Article", new { @catid = tempcatID, page = totalPage })">>></a></li>
            </ul>
        }
        <div class="clearfix"></div>
    </div>
</div>
}