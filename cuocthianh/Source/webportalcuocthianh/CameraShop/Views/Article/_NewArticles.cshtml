@using CoreData
@model IEnumerable<Article>
@if (Model != null && Model.Count() > 0)
{ 
    <div class="article-container index">
        <h1 class="general-heading">
            <span>Tất cả bài viết</span> <a href="@Url.Action("Index", "article")">Xem thêm >></a>
        </h1>
        <div class="list-article">
            <ul>
            @foreach (var item in Model)
            {
                <li>
                    <div class="article-holder">
                        <a class="article-link-img" href="@Url.Action("detail", "article", new { @id=""+@item.ID+""})">
                            <img src="@Url.Content("~/Media/article/"+@item.Image+"")" alt="@item.Title" />
                        </a>
                        <div class="article-infor">
                            <p class="description-box">
                                <span>@item.ShortDescription</span>
                            </p>
                            <h2>
                                <a href="@Url.Action("detail", "article", new { @id = "" + @item.ID + "" })" class="product-title">@item.Title</a></h2>
                        </div>
                    </div>
                </li>
            }
            </ul>
        </div>
    </div>
}