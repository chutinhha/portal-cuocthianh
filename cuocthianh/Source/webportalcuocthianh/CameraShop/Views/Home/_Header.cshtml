<header class="with-header-nav-menu">
    <div class="container clearfix">
        <div class="left-part">
            <nav class="menu-categories dropel">
                <a href="#" onclick="return false;" class="icon-menu-categories tooltip"
                    title="Categories">Categories</a>
                <div class="dropdown">
                    <div class="dropdown-wrapper arrow-up-left">
                        <ul class="categories-list">
                            <li class="cat-item cat-item-13"><a href="#"
                                title="شاهد جميع المقالات في تصنيف Celebrities">Make up</a> </li>
                            <li class="cat-item cat-item-1"><a href="#"
                                title="شاهد جميع المقالات في تصنيف Commercial">Hair</a> </li>
                            <li class="cat-item cat-item-14"><a href="#"
                                title="شاهد جميع المقالات في تصنيف Landscapes">Esthetics</a> </li>
                            <li class="cat-item cat-item-19"><a href="#"
                                title="شاهد جميع المقالات في تصنيف Sport">Nails</a> </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="search-box clearfix dropel">
                <a href="http://pinthis-rtl.pixelbeautify.com/#" onclick="return false;" class="icon-zoom">
                    Search</a>
                <div class="dropdown">
                    <div class="dropdown-wrapper arrow-up-left">
                        @Html.Action("_SearchInputControl", "Search")
                    </div>
                </div>
            </div>
        </div>
        <h1 class="logo">
            <a href="@Url.Action("Index", "Home")" title="PixelBeautify – PinThis Theme Preview">
                <img src="../../Content/imgs/logo0000.png" alt="PixelBeautify – PinThis Theme Preview">
            </a>
        </h1>
        <div class="right-part">
            <div class="log-in-out dropel">
                @if(Session["UserID"]==null || Session["UserID"]==""){
                <a href="#" onclick="return false;" title="Đăng Nhập" class="icon-login tooltip">Đăng
                    Nhập</a>
                <div class="dropdown">
                    <div class="dropdown-wrapper arrow-up-right">
                        <div id="login-form">
                            @*<form name="login-form" id="login-form" action="@Url.Action("LoginHome","Home")"
                        method="post">*@
                            <p class="login-username">
                                <label for="user_login">
                                    Tài khoản</label>
                                <input type="text" name="log" id="user_login" class="input" value="Tài khoản" size="20">
                            </p>
                            <p class="login-password">
                                <label for="user_pass">
                                    Mật khẩu</label>
                                <input type="password" name="pwd" id="user_pass" class="input" value="password" size="20">
                            </p>
                            <p class="login-submit">
                                <input type="submit" name="wp-submit" id="wp-submit" class="button-primary loginweb" value="Login">
                            </p>
                            @*</form>*@
                        </div>
                        <p class="login-links clearfix">
                            <span class="fleft"><a href="http://pinthis-rtl.pixelbeautify.com/wp-login.php?action=lostpassword&amp;redirect_to=http://pinthis-rtl.pixelbeautify.com/donec-euismod-fermentum-3/"
                                title="Lost password">Quên mật khẩu ?</a> </span><span class="fright"><a href="http://pinthis-rtl.pixelbeautify.com/wp-login.php?action=register">
                                    Đăng ký</a></span>
                        </p>
                    </div>
                </div>
                } else{
                    <a href="#" title="Đã đăng Nhập" class="tooltip">@Session["UserName"]</a>
                    <div class="dropdown">
                    <div class="dropdown-wrapper arrow-up-right">
                        <div id="login-form">
                            <p class="login-username">
                                <a href="@Url.Action("LogOffHome", "Home")">Thoát</a>
                            </p>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
    <div class="container fluid clearfix">
        <a href="http://pinthis-rtl.pixelbeautify.com/#" onclick="return false;" class="icon-nav-menu">
            Menu</a>
        <div class="header-menu">
            <div class="header-menu-wrapper arrow-up-right">
                <ul id="menu-menu-1" class="header-menu-list">
                    <li id="menu-item-241" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-has-children menu-item-241">
                        <a href="http://pinthis-rtl.pixelbeautify.com/portfolio/">Portfolio</a>
                        <div class="dropdown">
                            <div class="dropdown-wrapper arrow-up-left">
                                <ul class="sub-menu">
                                    <li id="menu-item-242" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-242">
                                        <a href="http://pinthis-rtl.pixelbeautify.com/category/sport/">Sport</a></li>
                                    <li id="menu-item-243" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-243">
                                        <a href="http://pinthis-rtl.pixelbeautify.com/category/landscapes/">Landscapes</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <li id="menu-item-231" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-231">
                        <a href="http://pinthis-rtl.pixelbeautify.com/category/celebrities/">Celebrities</a></li>
                    <li id="menu-item-232" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-232">
                        <a href="http://pinthis-rtl.pixelbeautify.com/category/commercial/">Commercial</a></li>
                    <li id="menu-item-244" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-244">
                        <a href="http://pinthis-rtl.pixelbeautify.com/404">404 Page</a></li>
                    <li id="menu-item-230" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-230">
                        <a href="http://pinthis-rtl.pixelbeautify.com/about/">About</a></li>
                    <li id="menu-item-229" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-229">
                        <a href="http://pinthis-rtl.pixelbeautify.com/contact/">Contact Us</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>